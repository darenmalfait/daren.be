{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    ":dependencyDashboard",
    ":semanticPrefixFixDepsChoreOthers",
    ":ignoreModulesAndTests",
    "group:monorepos",
    "group:recommended",
    "workarounds:all",
    "schedule:daily"
  ],
  "rebaseWhen": "conflicted",
  "ignoreDeps": [],
  "labels": ["dependencies"],
  "packageRules": [
    {
      "groupName": "react",
      "matchPackageNames": [
        "react",
        "react-dom",
        "@types/react",
        "@types/react-dom"
      ]
    },
    {
      "groupName": "tinacms",
      "matchPackagePatterns": ["@tinacms*", "tinacms*"],
      "automerge": true
    },
    {
      "groupName": "commitlint",
      "matchPackagePatterns": ["@commitlint/*", "husky"],
      "automerge": true
    },
    {
      "groupName": "tailwind",
      "matchPackagePatterns": ["@tailwind/*", "tailwindcss"]
    },
    {
      "groupName": "heroicons",
      "matchPackagePatterns": "@heroicons/*"
    },
    {
      "groupName": "NextJS",
      "matchPackagePatterns": ["@next*", "next*"]
    },
    {
      "groupName": "eslint",
      "matchPackagePatterns": ["eslint*", "@typescript-eslint/*"]
    },
    {
      "groupName": "Daren",
      "matchPackagePatterns": ["@daren*"]
    },
    {
      "groupName": "github actions",
      "matchManagers": ["github-actions"]
    }
  ],
  "prConcurrentLimit": 30,
  "prHourlyLimit": 0,
  "rangeStrategy": "bump",
  "timezone": "Europe/Paris"
}
