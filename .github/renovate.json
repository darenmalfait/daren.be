{
  "extends": ["config:base"],
  "ignorePresets": [":prHourlyLimit2"],
  "rangeStrategy": "update-lockfile",
  "automerge": true,
  "major": {
    "automerge": false
  },
  "lockFileMaintenance": {
    "enabled": false
  },
  "schedule": ["before 7am every weekday", "every weekend"],
  "semanticCommits": "enabled",
  "rebaseWhen": "conflicted",
  "labels": ["dependencies"],
  "packageRules": [
    {
      "groupName": "react",
      "matchPackageNames": [
        "react",
        "react-dom",
        "@types/react",
        "@types/react-dom"
      ]
    },
    {
      "groupName": "tinacms",
      "matchPackagePatterns": ["@tinacms*", "tinacms*"],
      "automerge": true
    },
    {
      "groupName": "commitlint",
      "matchPackagePatterns": ["@commitlint/*", "husky"],
      "automerge": true
    },
    {
      "groupName": "tailwind",
      "matchPackagePatterns": ["@tailwind/*", "tailwindcss"]
    },
    {
      "groupName": "algolia",
      "matchPackagePatterns": [
        "@algolia*",
        "algoliasearch",
        "react-instantsearch*"
      ]
    },
    {
      "groupName": "heroicons",
      "matchPackagePatterns": "@heroicons/*"
    },
    {
      "groupName": "NextJS",
      "matchPackagePatterns": ["@next*", "next*"]
    },
    {
      "groupName": "eslint",
      "matchPackagePatterns": ["eslint*", "@typescript-eslint/*"]
    },
    {
      "groupName": "Daren",
      "matchPackagePatterns": ["@daren*"]
    },
    {
      "groupName": "github actions",
      "matchManagers": ["github-actions"]
    }
  ],
  "timezone": "Europe/Paris"
}
