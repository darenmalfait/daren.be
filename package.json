{
	"name": "nerdfish-website",
	"version": "0.0.0",
	"private": true,
	"type": "module",
	"workspaces": ["apps/*", "packages/*"],
	"scripts": {
		"build": "turbo build",
		"checks": "pnpm lint && turbo typecheck --continue",
		"checks:fix": "pnpm lint:fix && turbo typecheck --continue --force",
		"clean": "turbo clean && rm -rf node_modules && rm -rf .turbo",
		"dev": "turbo dev",
		"lint": "npx biome check",
		"lint:fix": "npx biome check --write ./",
		"prepare": "husky",
		"typecheck": "turbo typecheck",
		"vercel-build": " turbo build"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.9.4",
		"@commitlint/cli": "^19.6.0",
		"@commitlint/config-conventional": "^19.6.0",
		"@nerdfish/config": "^1.3.0",
		"husky": "^9.1.7",
		"turbo": "^2.3.0"
	},
	"packageManager": "pnpm@9.14.2"
}
