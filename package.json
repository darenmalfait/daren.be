  "scripts": {
    "generate:css": "postcss styles/**/*.css --base styles --dir app/styles",
    "build:css": "npm run generate:css -- --minify",
    "build:remix": "remix build",
    "build:server": "esbuild --platform=node --format=cjs ./server.ts --outdir=build",
    "prebuild": "npm run clean",
    "build": "run-s build:*",
    "clean": "rimraf ./node_modules/.cache ./server/dist ./build ./public/build \"./app/styles/**/*.css\" && echo All clean âœ¨",
    "dev": "run-p dev:*",
    "dev:server": "cross-env NODE_ENV=development nodemon --signal SIGINT --watch ./build/server.js --require ./node_modules/dotenv/config  ./build/server.js",
    "dev:build": "cross-env NODE_ENV=development npm run build:server -- --watch",
    "dev:css": "cross-env NODE_ENV=development npm run generate:css -- --watch",
    "dev:remix": "cross-env NODE_ENV=development remix watch",
    "dev:studio": "cd studio && npm run dev",
    "dev:translate": "cross-env NODE_ENV=development nodemon --watch './build/' -x 'npm run translate -- --silent'",
    "lint:src": "eslint --ext .js,.jsx,.ts,.tsx .",
    "lint:studio": "cd studio && npm run validate",
    "lint:types": "tsc --noEmit",
    "postinstall": "remix setup node",
    "prepare": "husky install",
    "start": "cross-env NODE_ENV=production node ./build/server.js",
    "translate": "i18next -c i18next-parser.config.mjs",
    "validate": "run-s lint:* && cd studio && npm run validate"
  },
