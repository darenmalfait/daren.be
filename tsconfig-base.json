{
  "include": ["**/*.ts", "**/*.tsx"],
  "compilerOptions": {
    "lib": ["ES2021", "DOM", "DOM.Iterable"],
    "incremental": true,
    "isolatedModules": true,
    "importsNotUsedAsValues": "error",
    "noEmit": true,
    "allowJs": true,
    "esModuleInterop": true,
    "jsx": "react",
    "moduleResolution": "node",
    "module": "ESNext",
    "target": "es2020",
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "noUncheckedIndexedAccess": true
  }
}
