{
	"extends": "@repo/typescript-config/base.json",
	"compilerOptions": {
		"plugins": [
			{
				"name": "next"
			}
		],
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"incremental": true,
		"jsx": "preserve"
	},
	"include": [
		"./**/*.js",
		"./**/*.jsx",
		"./**/*.ts",
		"./**/*.tsx",
		".next/types/**/*.ts",
		"next-env.d.ts",
		"next.config.mjs",
		"postcss.config.cjs"
	],
	"exclude": ["node_modules", ".next", "public"]
}
