{
	"extends": "../../tsconfig.json",
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"~/*": ["src/*"],
			"~/content/*": ["content/*"],
			"~/tina/*": ["tina/*"]
		},
		"plugins": [
			{
				"name": "next"
			}
		],
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"incremental": true,
		"jsx": "preserve"
	},
	"include": [
		"./**/*.js",
		"./**/*.ts",
		"./**/*.tsx",
		".forestry/config.ts",
		".forestry/types.ts",
		".next/types/**/*.ts",
		".next/types/**/*.ts",
		"next-env.d.ts",
		"next.config.mjs",
		"postcss.config.cjs",
		"tina/**/*.ts",
		"tina/**/*.tsx"
	],
	"exclude": ["node_modules", ".next", "public", "tina/__generated__"]
}
