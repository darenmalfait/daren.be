{
	"$schema": "https://turbo.build/schema.json",
	"globalDependencies": [".env"],
	"tasks": {
		"build": {
			"dependsOn": ["^build"],
			"outputs": ["dist/**", ".next/**", "!.next/cache/**"],
			"env": [
				"VERCEL",
				"VERCEL_URL",
				"VERCEL_ENV",
				"NODE_ENV",
				"DATABASE_URL",
				"EMAIL_FROM",
				"RESEND_API_KEY",
				"HEAD",
				"SKIP_EMAILS",
				"NEXT_PUBLIC_VERCEL_GIT_COMMIT_REF",
				"NEXT_PUBLIC_RECAPTCHA_SITEKEY",
				"NEXT_PUBLIC_URL",
				"RECAPTCHA_SECRETKEY",
				"NEXT_PUBLIC_TINA_CLIENT_ID",
				"TINA_TOKEN",
				"NEXT_PUBLIC_TINA_BRANCH",
				"GROQ_API_KEY",
				"CHAT_SYSTEM_PROMPT"
			]
		},
		"build:tina": {
			"dependsOn": ["^build:tina"]
		},
		"topo": {
			"dependsOn": ["^topo"]
		},
		"typecheck": {
			"dependsOn": ["^topo"],
			"outputLogs": "errors-only"
		},
		"clean": {
			"cache": false
		},
		"dev": {
			"dependsOn": [],
			"persistent": true,
			"cache": false
		},
		"sync:env": {
			"cache": false,
			"dependsOn": ["^sync:env"]
		},
		"test:e2e": {
			"outputs": ["playwright-report/**"],
			"env": ["SKIP_EMAILS"]
		},
		"test:e2e:ui": {
			"outputs": ["playwright-report/**"],
			"env": ["SKIP_EMAILS"]
		},
		"test:e2e:inspector": {
			"outputs": ["playwright-report/**"]
		}
	}
}
